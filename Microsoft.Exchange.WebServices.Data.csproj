    <Exec Command="$(OutputPath)\nuget pack $(ProjectFileName) -Properties Configuration=Release -Symbols -OutputDirectory $(OutputPath) -IncludeReferencedProjects" />
  </Target>
  <ItemGroup>
    <Compile Remove="fxcopexclusions.cs" />
  </ItemGroup>
